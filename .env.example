# 环境配置示例文件
# 复制此文件为 .env.local 并根据需要修改配置

# 应用基础配置
REACT_APP_NAME=云平台微前端系统
REACT_APP_VERSION=1.0.0
REACT_APP_BASE_URL=http://localhost:3000
REACT_APP_PORT=3000

# 认证配置
REACT_APP_LOGIN_URL=http://localhost:3000/login
REACT_APP_LOGOUT_URL=http://localhost:3000/login
REACT_APP_TOKEN_KEY=auth_token

# 微前端全局配置
REACT_APP_MF_HOST=http://localhost
REACT_APP_CORS_ENABLED=true

# 模板系统配置
REACT_APP_MF_TEMPLATE_PORT=3003
REACT_APP_MF_TEMPLATE_ENABLED=true

# 营销系统配置
REACT_APP_MF_MARKETING_PORT=3001
REACT_APP_MF_MARKETING_ENABLED=false

# 财务系统配置
REACT_APP_MF_FINANCE_PORT=3002
REACT_APP_MF_FINANCE_ENABLED=false

# 用户管理系统配置
REACT_APP_MF_USER_PORT=3004
REACT_APP_MF_USER_ENABLED=false

# 库存管理系统配置
REACT_APP_MF_INVENTORY_PORT=3005
REACT_APP_MF_INVENTORY_ENABLED=false

# 开发配置
REACT_APP_ENABLE_MOCK=true
REACT_APP_HOT_RELOAD=true
REACT_APP_SHOW_DEV_TOOLS=true
REACT_APP_LOG_LEVEL=debug

# 生产环境配置
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_ERROR_TRACKING=true
REACT_APP_CDN_ENABLED=true
REACT_APP_COMPRESSION_ENABLED=true

# 生产环境配置示例（在生产环境中使用）
# REACT_APP_BASE_URL=https://your-domain.com
# REACT_APP_LOGIN_URL=https://your-domain.com/login
# REACT_APP_MF_HOST=https://your-domain.com
# REACT_APP_ENABLE_MOCK=false
# REACT_APP_CORS_ENABLED=false

# 生产环境微前端应用配置示例
# REACT_APP_MF_TEMPLATE_HOST=https://your-domain.com/mf-template
# REACT_APP_MF_MARKETING_HOST=https://your-domain.com/mf-marketing
# REACT_APP_MF_FINANCE_HOST=https://your-domain.com/mf-finance
# REACT_APP_MF_USER_HOST=https://your-domain.com/mf-user
# REACT_APP_MF_INVENTORY_HOST=https://your-domain.com/mf-inventory